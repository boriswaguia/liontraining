// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============= MULTI-SCHOOL HIERARCHY =============

model School {
  id          String       @id @default(cuid())
  name        String       // e.g., "Institut Universitaire de Technologie de Douala"
  shortName   String       @unique // e.g., "UIT Douala"
  city        String       // e.g., "Douala"
  country     String       @default("Cameroun")
  logo        String?      // URL or path to logo
  description String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  departments Department[]
  users       User[]
}

model Department {
  id          String          @id @default(cuid())
  schoolId    String
  name        String          // e.g., "G√©nie Informatique"
  code        String          // e.g., "GI"
  description String?
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  school      School          @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  classes     AcademicClass[]
  users       User[]

  @@unique([schoolId, code])
}

model AcademicClass {
  id            String     @id @default(cuid())
  departmentId  String
  name          String     // e.g., "Licence 1" or "MTIN 1"
  code          String     // e.g., "L1", "L2", "M1"
  academicYear  String     // e.g., "2025/2026"
  description   String?
  isActive      Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  department    Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  courses       Course[]
  users         User[]

  @@unique([departmentId, code, academicYear])
}

// ============= USERS & COURSES =============

model User {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  password       String
  role           String          @default("student") // student | admin | school_admin
  language       String          @default("fr")     // fr | en
  isActive       Boolean         @default(true)
  schoolId       String?
  departmentId   String?
  classId        String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  school         School?         @relation(fields: [schoolId], references: [id])
  department     Department?     @relation(fields: [departmentId], references: [id])
  academicClass  AcademicClass?  @relation(fields: [classId], references: [id])
  enrollments    Enrollment[]
  studyGuides    StudyGuide[]
  exercises      Exercise[]
  flashcardDecks FlashcardDeck[]
  chatSessions   ChatSession[]
  studyPlans     StudyPlan[]
  progress       UserProgress[]
  topicMastery   TopicMastery[]
  achievements   Achievement[]
  activityLogs   ActivityLog[]
}

model Course {
  id             String          @id @default(cuid())
  classId        String?
  code           String          @unique
  title          String
  description    String
  hours          Int             @default(36)
  semester       Int             @default(1)
  level          Int             @default(1)
  content        String          // Full markdown content
  category       String          // e.g., "math", "cs", "law", "language", "electronics"
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  academicClass  AcademicClass?  @relation(fields: [classId], references: [id], onDelete: Cascade)
  enrollments    Enrollment[]
  studyGuides    StudyGuide[]
  exercises      Exercise[]
  flashcardDecks FlashcardDeck[]
  chatSessions   ChatSession[]
  studyPlans     StudyPlan[]
  progress       UserProgress[]
  topicMastery   TopicMastery[]
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId   String
  enrolledAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
}

model StudyGuide {
  id        String   @id @default(cuid())
  userId    String
  courseId   String
  title     String
  content   String   // AI-generated markdown
  chapter   String?  // Optional: specific chapter/topic
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Exercise {
  id        String   @id @default(cuid())
  userId    String
  courseId   String
  topic     String
  questions String   // JSON array of questions
  solutions String   // JSON array of solutions
  difficulty String  @default("medium") // easy | medium | hard
  score     Int?     // Student's score if attempted
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model FlashcardDeck {
  id        String      @id @default(cuid())
  userId    String
  courseId   String
  title     String
  cards     String      // JSON array of {front, back} objects
  reviewed  Boolean     @default(false)
  confidence Int?       // 0-100 self-reported confidence after review
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id          String        @id @default(cuid())
  userId      String
  courseId     String
  title       String
  contextType String?       // "exercise" | "flashcard" | "study_guide" | "study_plan" | null (general)
  contextId   String?       // ID of the referenced content
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    ChatMessage[]
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  course      Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id           String      @id @default(cuid())
  sessionId    String
  role         String      // "user" | "assistant"
  content      String
  createdAt    DateTime    @default(now())
  session      ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model StudyPlan {
  id        String         @id @default(cuid())
  userId    String
  courseId   String
  title     String
  plan      String         // JSON structure with schedule
  startDate DateTime
  endDate   DateTime
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  tasks     StudyTask[]
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model StudyTask {
  id          String    @id @default(cuid())
  planId      String
  title       String
  description String?
  dueDate     DateTime
  completed   Boolean   @default(false)
  completedAt DateTime?
  plan        StudyPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
}

// ============= PROGRESS TRACKING =============

model UserProgress {
  id                String   @id @default(cuid())
  userId            String
  courseId           String
  masteryLevel      Int      @default(0)     // 0-100 overall mastery
  currentDifficulty String   @default("easy") // easy | medium | hard
  totalXp           Int      @default(0)
  streak            Int      @default(0)     // consecutive days
  topicsCovered     String   @default("[]")  // JSON array of topics
  totalExercises    Int      @default(0)
  totalCorrect      Int      @default(0)
  totalFlashcards   Int      @default(0)
  totalStudyGuides  Int      @default(0)
  totalChatMessages Int      @default(0)
  lastActivityAt    DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
}

model TopicMastery {
  id              String   @id @default(cuid())
  userId          String
  courseId         String
  topic           String
  masteryScore    Int      @default(0)  // 0-100
  timesPracticed  Int      @default(0)
  timesCorrect    Int      @default(0)
  difficultyReached String @default("easy") // highest difficulty attempted
  weakAreas       String   @default("[]")   // JSON array of weak sub-topics
  lastPracticedAt DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course          Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId, topic])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  badge       String   // badge identifier e.g., "first_exercise", "streak_7"
  title       String   // display name
  description String
  icon        String   @default("üèÜ")
  earnedAt    DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badge])
}

// ============= ACTIVITY LOG =============

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  action      String   // e.g., "login", "enroll", "chat.message", "exercise.generate", "exercise.score", "study_guide.generate", "flashcard.generate", "study_plan.generate", "admin.user.create", etc.
  category    String   // "auth" | "learning" | "ai" | "admin"
  resource    String?  // e.g., "course", "exercise", "chat_session", "user", "school"
  resourceId  String?  // ID of the affected resource
  detail      String?  // JSON string with extra context (e.g., course title, score, etc.)
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([category])
  @@index([createdAt])
}
