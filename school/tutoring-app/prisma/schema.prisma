// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  password       String
  role           String          @default("student") // student | admin
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  enrollments    Enrollment[]
  studyGuides    StudyGuide[]
  exercises      Exercise[]
  flashcardDecks FlashcardDeck[]
  chatSessions   ChatSession[]
  studyPlans     StudyPlan[]
}

model Course {
  id             String          @id @default(cuid())
  code           String          @unique
  title          String
  description    String
  hours          Int             @default(36)
  semester       Int             @default(1)
  level          Int             @default(1)
  content        String          // Full markdown content
  category       String          // e.g., "math", "cs", "law", "language", "electronics"
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  enrollments    Enrollment[]
  studyGuides    StudyGuide[]
  exercises      Exercise[]
  flashcardDecks FlashcardDeck[]
  chatSessions   ChatSession[]
  studyPlans     StudyPlan[]
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId   String
  enrolledAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
}

model StudyGuide {
  id        String   @id @default(cuid())
  userId    String
  courseId   String
  title     String
  content   String   // AI-generated markdown
  chapter   String?  // Optional: specific chapter/topic
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Exercise {
  id        String   @id @default(cuid())
  userId    String
  courseId   String
  topic     String
  questions String   // JSON array of questions
  solutions String   // JSON array of solutions
  difficulty String  @default("medium") // easy | medium | hard
  score     Int?     // Student's score if attempted
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model FlashcardDeck {
  id        String      @id @default(cuid())
  userId    String
  courseId   String
  title     String
  cards     String      // JSON array of {front, back} objects
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id        String        @id @default(cuid())
  userId    String
  courseId   String
  title     String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id           String      @id @default(cuid())
  sessionId    String
  role         String      // "user" | "assistant"
  content      String
  createdAt    DateTime    @default(now())
  session      ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model StudyPlan {
  id        String         @id @default(cuid())
  userId    String
  courseId   String
  title     String
  plan      String         // JSON structure with schedule
  startDate DateTime
  endDate   DateTime
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  tasks     StudyTask[]
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model StudyTask {
  id          String    @id @default(cuid())
  planId      String
  title       String
  description String?
  dueDate     DateTime
  completed   Boolean   @default(false)
  completedAt DateTime?
  plan        StudyPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
}
